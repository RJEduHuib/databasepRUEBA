<link rel="stylesheet" href="">
{{#each listaPagina}}
<form action="/rol/add/{{idPage}}" method="post">
{{/each}}
    <div id="contenedor">
        <input type="hidden" name="_csrf" value="{{ csrfToken }}">
        <div id="titulo">
            <p>Agregar Rol</p>
        </div>
        {{#each listaRol}}
        <input type="text" name="idRol" id="numero" value="{{maximo}}">
        {{/each}}
        <div id="nombre">
            <p>Nombre de Rol:</p>
            <input type="text" name="nameRol" id="nameRol">
        </div>
        <div id="boton">
            <button type="submit">Guardar</button>
        </div>
    </div>
</form>

<script src="/js/numero.js"></script>