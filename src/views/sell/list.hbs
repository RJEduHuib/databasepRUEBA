<link rel="stylesheet" href="">
{{#each lista}}
<form action="/sell/list/{{idClient}}" method="get">
{{/each}}
    <div id="contenedor">
        <div id="titulo">
            <p>Lista del Comprador</p>
        </div>
        <div id="Datos">
            <div class="row">
                {{#each lista}}
                <div id="tarjeta">
                    <div id="nombre">
                        <p>{{namePersonSell}}</p>
                    </div>
                    <div id="comapnia">
                        <p>{{companySell}}</p>
                    </div>
                    <div id="celular">
                        <p>{{cellPhoneSell}}</p>
                    </div>
                    <div id="tipoPago">
                        <p>{{payTypeSell}}</p>
                    </div>
                    <div id="pago">
                        <p>{{salesValueSell}}</p>
                    </div>
                    <div id="estado">
                        <p>{{stateSell}}</p>
                    </div>
                    <div id="actualizar">
                        <a href="/sell/update/{{idSell}}"><button type="button">Actualizar</button></a>
                    </div>
                    <div id="desavilitar">
                        <a href="/sell/delete/{{idSell}}"><button type="button">Desabilitar</button></a>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
    </div>
</form>