<form action="/page/add/{{user.idUser}}" method="post" enctype="multipart/form-data">
    <div id="contenedor">
        <input type="hidden" name="_csrf" value="{{ csrfToken }}">
        {{#each validacion}}
        <div id="validar">
            <a href="/page/list/{{idPage}}"><button type="button">Continuar</button></a>
        </div>
        {{else}}
        <div id="titulo">{{#each lista}}
            <p>Agregar Pagina N째 <input type="text" name="idPage" id="numero" value="{{Maximo}}"></p>{{/each}}
        </div>
        <div id="datos">
            <div id="imagen">
                <div id="cambioImagen">
                    <img src="/img/icons/noImagen.png" id="imagenPrevisualizacion" />
                </div>
                <input type="file" name="photoPage" id="seleccionArchivos" accept="image/*" />
            </div>
            <div id="Nombre">
                <p>Nombre de la Pagina:</p>
                <input type="text" name="namePage" id="namePage" required>
            </div>
            <div id="descripcion">
                <p>Descripci처n:
                    <textarea name="descriptionPage" id="descriptionPage"></textarea>
                </p>
            </div>
            <div id="mision">
                <p>Misi처n:</p>
                <textarea name="misonPage" id="misonPage"></textarea>
            </div>
            <div id="vision">
                <p>Visi처n:</p>
                <textarea name="visonPage" id="visonPage"></textarea>
            </div>
            <div id="celular">
                <p>Celular:</p>
                <input type="text" name="cellPhonePage" id="cellPhonePage">
            </div>
            <div id="correo">
                <p>Correo Electronico:</p>
                <input type="email" name="emailPage" id="emailPage">
            </div>
            <div id="boton">
                <button type="submit">Guardar</button>
            </div>
        </div>
        {{/each}}
    </div>
</form>

<script src="/js/numero.js"></script>
<script src="/js/preview.js"></script>