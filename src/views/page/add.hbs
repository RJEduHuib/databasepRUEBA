<link rel="stylesheet" href="/css/page/add.css">
<form action="/page/add/{{user.idUser}}" method="post" enctype="multipart/form-data">
    <div id="contenedor">
        <input type="hidden" name="_csrf" value="{{ csrfToken }}">
        <div id="imagenFondo">
            <img src="/img/fondo/fondoPagina.png">
        </div>
        {{#each validacion}}
        <div id="mensajeBienvenida">
            <p>Bienvenido de vuelta a {{namePage}}, continúa gestionando tus datos.</p>
        </div>
        <div id="foto8">
            <img src="/img/fondo/bode.png">
            <div id="validar">
                <a href="/page/list/{{idPage}}"><button type="button">¡Empezar ahora!</button></a>
            </div>
        </div>
        {{else}}
        <div id="imagenFondo">
            <img src="/img/fondo/fondoPagina.png">
        </div>
        <div id="imagen">
            <div id="cambioImagen">
                <img src="/img/icons/noImagen.png" id="imagenPrevisualizacion" />
            </div>
            <input type="file" name="photoPage" id="seleccionArchivos" accept="image/*" />
            <button type="button" id="botonImagen">Imagen</button>
        </div>
        <div id="titulo">{{#each lista}}
            <p>Agregar página <input type="text" name="idPage" id="numero" value="{{Maximo}}"></p>{{/each}}
        </div>
        <div id="datos">
            <div id="foto1">
                <img src="/img/fondo/bode.png">
                <div id="Nombre">
                    <input type="text" name="namePage" id="namePage" required placeholder="Nombre de la página">
                </div>
            </div>
            <div id="foto2">
                <img src="/img/fondo/bode.png">
                <div id="descripcion">
                    <textarea name="descriptionPage" id="descriptionPage" placeholder="Descripción"></textarea>
                </div>
            </div>
            <div id="foto3">
                <img src="/img/fondo/bode.png">
                <div id="mision">
                    <textarea name="misonPage" id="misonPage" placeholder="Misión"></textarea>
                </div>
            </div>
            <div id="foto4">
                <img src="/img/fondo/bode.png">
                <div id="vision">
                    <textarea name="visonPage" id="visonPage" placeholder="Visión"></textarea>
                </div>
            </div>
            <div id="foto5">
                <img src="/img/fondo/bode.png">
                <div id="celular">
                    <input type="text" name="cellPhonePage" id="cellPhonePage" placeholder="Celular">
                </div>
            </div>
            <div id="foto6">
                <img src="/img/fondo/bode.png">
                <div id="correo">
                    <input type="email" name="emailPage" id="emailPage" placeholder="Correo electrónico">
                </div>
            </div>
            <div id="foto7">
                <img src="/img/fondo/bode.png">
                <div id="boton">
                    <button type="submit">Guardar</button>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</form>

<script src="/js/numero.js"></script>
<script src="/js/preview.js"></script>
<script src="/js/botonImagen.js"></script>