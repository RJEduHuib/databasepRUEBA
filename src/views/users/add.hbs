<link rel="stylesheet" href="">
{{#each listaPagina}}
<form action="/user/add/{{idPage}}" method="post" enctype="multipart/form-data">
{{/each}}
    <div id="contenedor">
        <input type="hidden" name="_csrf" value="{{ csrfToken }}">
        <div id="datos">
            <div id="titulo">{{#each lista}}
                <h1>Usuario de la Pagina {{namePage}} N° <input type="text" name="idUser" id="numero" value="{{Maximo}}"></h1>{{/each}}
            </div>
            <div id="imagen">
                <div id="cambioImagen">
                    <img src="/img/usuario/god.jpg" id="imagenPrevisualizacion" />
                </div>
                <input type="file" name="photoUse" id="seleccionArchivos" accept="image/*" />
            </div>
            <div id="nombre">
                <p>Nombre Completo:</p>
                <input type="text" name="completeNameUser" id="completeNameUser" required>
            </div>
            <div id="cedula">
                <p>Cedula:</p>
                <input type="text" name="identificationCardUser" id="identificationCardUser" required>
            </div>
            <div id="correo">
                <p>Email:</p>
                <input type="text" name="emailUser" id="emailUser" required>
            </div>
            <div id="Celular">
                <p>Celular:</p>
                <input type="text" name="cellPhoneUser" id="cellPhoneUser" required>
            </div>
            <div id="Usuario">
                <p>Usuario:</p>
                <input type="text" name="usernameUser" id="usernameUser" required>
            </div>
            <div id="Contraseña">
                <p>Contraseña:</p>
                <input type="password" name="passwordUser" id="passwordUser" required>
            </div>
            <div id="seleccionRol">
                <p>Elegir Rol de Usuario:</p>
                <select name="idRol" id="idRol">
                    <option value="">selecion de un Rol</option>
                    {{#each listaRol}}
                    <option value="{{idRol}}">{{nameRol}}</option>
                    {{/each}}
                </select>
            </div>
            <div id="seleccionPermisos">
                <p>Elegir los permisos del usuario:</p>
                <select name="idPermisos" id="idPermisos">
                    <option value="">selecione los permisos</option>
                    {{#each listaPermisos}}
                    <option onclick="darPermisos.permisosLista()" value="{{idPermission}}">{{namePermission}}</option>
                    {{/each}}
                </select>
                <div id="permisos"></div>
            </div>
            <div id="Boton">
                <button type="submit">Guardar</button>
            </div>
        </div>
    </div>
</form>

<script src="/js/preview.js"></script>
<script src="/js/numero.js"></script>
<script src="/js/seleccionPermisos.js"></script>