<link rel="stylesheet" href="/css/permisos/update.css">
{{#each lista}}
<form action="/permissions/update/{{idPermission}}" method="post">
    <input type="hidden" name="_csrf" value="{{ ../csrfToken }}">
    <div id="contenedor">
        <div id="imagenFondo">
            <img src="/img/fondo/fondoAgregar.png">
        </div>
        <div id="titulo">
            <p>Actualizar Permiso</p>
        </div>
        <input type="text" name="idRol" id="idRol" value="{{rolIdRol}}">
        <div id="datos">
            <div id="foto1">
                <img src="/img/fondo/bode.png">
                <div id="nombre">
                    <input type="text" name="namePermission" id="namePermission" value="{{namePermission}}"
                        placeholder="Nombre de Permiso:">
                </div>
            </div>
            <div id="foto3">
                <img src="/img/fondo/bode.png">
                <div id="estado">
                    <input type="text" name="statePermission" id="idestado" readonly value="{{statePermission}}">
                </div>
            </div>
            <div id="foto4">
                <img src="/img/fondo/bode.png">
                <div id="activo">
                    <button type="button" id="activarBtn">Activar</button>
                </div>
            </div>
            <div id="foto5">
                <img src="/img/fondo/bode.png">
                <div id="desactivo">
                    <button type="button" id="desactivarBtn">Desactivar</button>
                </div>
            </div>
            <div id="foto2">
                <img src="/img/fondo/bode.png">
                <div id="boton">
                    <button type="submit">Actualizar</button>
                </div>
            </div>
        </div>
    </div>
</form>
{{/each}}

<script src="/js/estados.js"></script>